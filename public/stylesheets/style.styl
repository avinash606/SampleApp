body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  text-align center
  background #000
a
  color: #00B7FF
  
#wrapper
  width 920px
  text-align left
  margin-left auto
  margin-right auto
  background #fff
  padding 20px
  border-bottom-radius(15px)
  
/* Header
-----------------------------------------------------------------------------*/
header
  background #F00060
  nav
    width 960px
    text-align right
    margin-left auto
    margin-right auto
    ul
      list-style none
      padding 10px
      margin-bottom 0
      li
        display inline
        margin-left 1%
        a
          background #fc9200
          border-radius(15px)
          display inline-block
          padding 5px 15px 6px
          color #fff
          text-decoration none
          position relative
          cursor pointer
          &:hover
            background-color #db0d5f

/* Footer
-----------------------------------------------------------------------------*/
footer
  color #666
  border-top 1px solid #ccc
  padding-top 1.5em
  ul
    list-style none
